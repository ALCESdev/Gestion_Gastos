@model Gestion_Gastos.Models.Categoria

@{
    ViewData["Title"] = "AddOrEdit";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="IdCategoria" value="@Model.IdCategoria" />
                <div class="form-group mb-3">
                    <div class='e-btn-group custom-radios'>
                        <input type="radio" id="radioleft" name="Tipo" value="Ingreso" checked="@(Model.Tipo=="Ingreso")" />
                        <label class="e-btn" for="radioleft">Ingreso</label>
                        <input type="radio" id="radioright" name="Tipo" value="Gasto" checked="@(Model.Tipo=="Gasto")" />
                        <label class="e-btn" for="radioright">Gasto</label>
                    </div>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <ejs-textbox id="titulo" placeholder="Titulo" ejs-for="Titulo" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="icono" placeholder="Icono" ejs-for="Icono" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icono" class="text-danger"></span>
                </div>
                <ejs-button id="submit" type="submit" content="Confirmar" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5"">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-regular fa-pen-to-square"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
