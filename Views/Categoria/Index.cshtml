@model IEnumerable<Gestion_Gastos.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-7">
        <ejs-grid id="categorias" dataSource="@Model" gridLines="None">
            <e-grid-columns>
                <e-grid-column headerText="Categoria" field="Titulo"></e-grid-column>
                <e-grid-column headerText="Tipo" field="Tipo"></e-grid-column>
                <e-grid-column headerText="Acciones"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5" ">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-regular fa-pen-to-square"></i>
        </div>
    </div>
</div>
